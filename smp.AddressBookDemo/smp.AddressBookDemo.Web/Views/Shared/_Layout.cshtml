<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no">
    <title>smp Demo Address Book</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")"  rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")"  rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-2.0.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout-2.2.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout.mapping-latest.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/App/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/App/Companies.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/App/company.js")" type="text/javascript"></script>
    
</head>

    <body>
        <div id="errorModal" class="modal hide fade alert alert-block alert-error">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;</button>
                <h3 id="errorTitle">
                </h3>
            </div>
            <div class="modal-body">
                <p id="ErrorMessage">
                </p>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-danger" data-dismiss="modal">Close</a>
            </div>
        </div>
        
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <div>
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".masterCollapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>

                        <div>
                            <a class="brand" href="@Url.Action("Index", "Companies")">Demo Address Book</a>
                        </div>

                        <div class="nav-collapse collapse masterCollapse">
                            <ul class="nav">
                                <li>
                                    <a href="@Url.Action("Index", "Companies")"><i class="icon-home"></i>Home</a>
                                </li>
                                <form class="navbar-search pull-right">
                                    <input id="quicksearch" type="text" class="search-query" data-provide="typeahead" placeholder="Find a company">
                                </form>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="page">
            <section id="main">
                @RenderBody()
            </section>
        </div>

    </body>
</html>
