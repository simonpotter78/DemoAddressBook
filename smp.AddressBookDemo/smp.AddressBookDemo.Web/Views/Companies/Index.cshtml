@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="companiesContainer" class="row-fluid">
    <div class="row-fluid">
        <div class="pagination">
            <ul data-bind="foreach: FirstLetters">
                <li><a href="#" data-bind="text: letter, click: $parent.SelectLetter"></a></li>
            </ul>
        </div>
    </div>
    <div class="form-actions">
        <button class="btn btn-success" type="button" data-bind="click: AddNewCompany">Add Company</button>
        <div class="pull-right">
            Matching companies : <span data-bind="text: Count"></span>
        </div>
    </div>
    <div class="row-fluid">
        
        <table class="table table-hover table-striped table-bordered" data-bind="foreach: Companies">
            <td data-bind="click: $parent.SelectCompany">
                <div>
                    <p><strong data-bind="text: Name"></strong></p>
                    <p><span data-bind="text: Town"></span> (<span data-bind="text: PostCode"></span>)</p> 
                </div>
            </td>
        </table>
    </div>
</div>

<script type="text/javascript">
    app.Companies.init();
</script>
